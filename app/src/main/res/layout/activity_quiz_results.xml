<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults">
    <ImageView
        android:id="@+id/IconCongratulation"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/congratulation"
        />
    <TextView
        android:id="@+id/txtCongrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="You've successfully completed a quiz"
        android:layout_below="@+id/IconCongratulation"
        />
    <LinearLayout
        android:layout_below="@+id/txtCongrats"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctAnswer"
            android:textStyle="bold"
            android:textColor="#00c853"
            android:text="Correct Answer: 0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incorrectAnswer"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#dd2c00"
            android:text="InCorrect Answer: 0"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnNewQuiz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_back_green20"
        android:text="Start New Quiz"
        android:textColor="#fff" />

</RelativeLayout>